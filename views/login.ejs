<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/styles/bootstrap-css/bootstrap.min.css" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.0/font/bootstrap-icons.css"
    />
    <link rel="stylesheet" href="/styles/global.css" />
    <title>Tryme</title>
  </head>

  <body>
    <%- include('./partials/navbar.ejs') %> <% if(message.length > 0) { %>
    <div class="alert alert-danger" role="alert"><%= message %></div>
    <% } %>

    <main class="mt-5 row mb-5">
      <div
        class="col-8 offset-2 col-md-6 offset-md-3 col-xl-4 offset-xl-4"
        id="cart"
      >
        <div class="bg-white p-4 rounded-3">
          <h1 class="mb-4 pb-3 border-bottom border-3 border-dark">Login</h1>
          <form action="/login" method="POST">
            <div class="mb-3">
              <label for="email" class="form-label">Email</label>
              <input
                type="email"
                class="form-control"
                id="email"
                name="email"
              />
            </div>
            <div class="mb-3">
              <label for="password" class="form-label">Password</label>
              <input
                type="password"
                class="form-control"
                id="password"
                name="password"
              />
            </div>
            <button class="btn btn-dark w-100 btn-lg">LOGIN</button>
          </form>
        </div>
      </div>
    </main>

    <script src="/scripts/bootstrap-js/bootstrap.min.js"></script>
  </body>
</html>

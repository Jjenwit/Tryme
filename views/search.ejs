<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/styles/bootstrap-css/bootstrap.min.css" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.0/font/bootstrap-icons.css"
    />
    <link rel="stylesheet" href="/styles/global.css" />
    <title>Tryme</title>
  </head>

  <body>
    <%- include('./partials/navbar.ejs') %>

    <main class="container">
      <h2 class="mb-4 pt-3 fs-1 text-center">Search results</h2>

      <div class="cards row row-cols-2 row-cols-md-3 row-cols-lg-4 g-4">
        <% for(let product of products) { %>

        <div class="col mb-3">
          <a
            href="/products/<%= product._id %>"
            class="card text-dark text-decoration-none d-block zoom"
          >
            <img src="<%= product.images[0] %> " class="p-2 fixed-card-img" />
            <div
              div
              class="card-body d-block d-lg-flex justify-content-between"
            >
              <h5 class="card-title text-decoration-none">
                <%= product.name %>
              </h5>
              <h5 class="display-6 fs-5">à¸¿<%= product.price %></h5>
            </div>
          </a>
        </div>

        <% } %>
      </div>
    </main>

    <script src="/scripts/bootstrap-js/bootstrap.min.js"></script>
  </body>
</html>

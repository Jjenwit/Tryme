<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/styles/bootstrap-css/bootstrap.min.css" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.0/font/bootstrap-icons.css"
    />
    <link rel="stylesheet" href="/splide/css/splide.min.css" />
    <link rel="stylesheet" href="/styles/global.css" />
    <title>Tryme</title>
  </head>

  <body>
    <%- include('./partials/navbar.ejs') %>

    <main class="mt-5 row mb-5">
      <div class="col-8 offset-2 col-md-6 offset-md-3" id="cart">
        <div class="bg-white p-4 rounded-3">
          <h1 class="mb-4 pb-3 border-bottom border-3 border-dark">
            Add product
          </h1>
          <form action="/add" method="POST" enctype="multipart/form-data">
            <div class="mb-3">
              <label for="images" class="form-label">Images</label>

              <div class="row row-cols-3" id="images"></div>

              <input
                type="file"
                class="form-control"
                id="files"
                name="files"
                accept="image/*"
                multiple
                required
              />
            </div>
            <div class="mb-3">
              <label for="name" class="form-label">Name</label>
              <input
                type="text"
                class="form-control"
                id="name"
                name="name"
                required
              />
            </div>
            <div class="mb-3">
              <label for="desrciption" class="form-label">Description</label>
              <textarea
                class="form-control"
                id="description"
                name="description"
                rows="4"
                required
              ></textarea>
            </div>
            <div class="mb-3">
              <label class="form-label d-block">Size</label>
              <input
                type="checkbox"
                class="btn-check"
                id="size-xs"
                name="size[xs]"
                autocomplete="off"
              />
              <label class="btn btn-outline-dark" for="size-xs">XS</label>
              <input
                type="checkbox"
                class="btn-check"
                id="size-s"
                name="size[s]"
                autocomplete="off"
              />
              <label class="btn btn-outline-dark" for="size-s">S</label>
              <input
                type="checkbox"
                class="btn-check"
                id="size-m"
                name="size[m]"
                autocomplete="off"
              />
              <label class="btn btn-outline-dark" for="size-m">M</label>
              <input
                type="checkbox"
                class="btn-check"
                id="size-l"
                name="size[l]"
                autocomplete="off"
              />
              <label class="btn btn-outline-dark" for="size-l">L</label>
              <input
                type="checkbox"
                class="btn-check"
                id="size-xl"
                name="size[xl]"
                autocomplete="off"
              />
              <label class="btn btn-outline-dark" for="size-xl">XL</label>
            </div>
            <div class="mb-3">
              <label for="duration" class="form-label">Duration</label>
              <div class="input-group w-20">
                <input
                  type="number"
                  class="form-control"
                  id="duration"
                  name="duration"
                  min="1"
                  required
                />
                <span class="input-group-text">weeks</span>
              </div>
            </div>
            <div class="mb-3">
              <label for="price" class="form-label">Price</label>
              <div class="input-group w-50">
                <span class="input-group-text">à¸¿</span>
                <input
                  type="number"
                  class="form-control"
                  id="price"
                  name="price"
                  min="0"
                  required
                />
              </div>
            </div>
            <button class="btn btn-dark w-100 btn-lg">Submit</button>
          </form>
        </div>
      </div>
    </main>

    <script src="/scripts/bootstrap-js/bootstrap.min.js"></script>
    <script src="/scripts/add.js"></script>
    <script src="/splide/js/splide.min.js"></script>
    <script src="/scripts/splide-add.js"></script>
  </body>
</html>

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/styles/bootstrap-css/bootstrap.min.css" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.0/font/bootstrap-icons.css"
    />
    <link rel="stylesheet" href="/splide/css/splide.min.css" />
    <link rel="stylesheet" href="/styles/global.css" />
    <title>Tryme</title>
  </head>

  <body>
    <%- include('./partials/navbar.ejs') %> <%-
    include('./partials/carousel.ejs') %>
    <main class="container-fluid">
      <h2 class="mb-4 pt-5 fs-1 text-center">Top Selling</h2>

      <div id="grid-slider" class="splide mb-5 bg-dark p-2 p-md-5 rounded-3">
        <div class="splide__track">
          <div class="splide__list">
            <% for(let product of topProducts) { %>
            <a
              class="splide__slide text-dark text-decoration-none d-block zoom my-2 h-auto"
              href="/products/<%= product._id %>"
            >
              <img src="<%= product.images[0] %>" alt="" />
            </a>
            <% } %>
          </div>
        </div>
      </div>

      <h2 class="mb-4 pt-3 fs-1 text-center">Promotions</h2>

      <div id="image-slider" class="splide mb-5 bg-dark p-2 p-md-5 rounded-3">
        <div class="splide__track">
          <div class="splide__list">
            <% for(let product of promotionProducts) { %>
            <a
              class="splide__slide my-4 text-dark text-decoration-none d-block zoom"
              href="/products/<%= product._id %>"
            >
              <img src="<%= product.images[0] %>" alt="" />
            </a>
            <% } %>
          </div>
        </div>
      </div>
    </main>

    <main class="container">
      <h2 class="mb-4 pt-3 fs-1 text-center">Discover</h2>

      <div class="cards row row-cols-2 row-cols-md-3 row-cols-lg-4 g-4 mb-5">
        <% for(let product of products) { %>

        <div class="col mb-3">
          <a
            href="/products/<%= product._id %>"
            class="card text-dark text-decoration-none d-block zoom"
          >
            <img src="<%= product.images[0] %> " class="card-img p-2" />
            <div class="card-body d-block d-lg-flex justify-content-between">
              <h5 class="card-title text-decoration-none">
                <%= product.name %>
              </h5>
              <h5 class="card-price display-6 fs-5">à¸¿<%= product.price %></h5>
            </div>
          </a>
        </div>

        <% } %>
      </div>
      <div class="text-center">
        <button class="btn btn-outline-dark rounded-pill mb-5" id="loader">
          Load More
        </button>
      </div>
    </main>

    <script src="/splide/js/splide.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@splidejs/splide-extension-grid@0.1.2/dist/js/splide-extension-grid.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="/scripts/splide-index.js"></script>
    <script src="/scripts/bootstrap-js/bootstrap.min.js"></script>
    <script src="/scripts/loadProducts.js"></script>
  </body>
</html>
